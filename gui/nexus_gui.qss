/* True ChatGPT/Claude-Style Minimal Dark Theme */
QWidget {
    background-color: #181818;
    color: #fafafa;
    font-family: 'Segoe UI', 'Inter', 'Roboto', Arial, sans-serif;
    font-size: 15px;
}

QPushButton {
    background-color: #232323;
    color: #fafafa;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: 500;
}
QPushButton:hover {
    background-color: #292929;
}
QPushButton:pressed {
    background-color: #111;
}

QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #232323;
    color: #fafafa;
    border: none;
    border-radius: 6px;
    padding: 6px;
}

QLabel {
    color: #fafafa;
}

QCheckBox, QRadioButton {
    color: #fafafa;
    spacing: 8px;
}

QSlider::groove:horizontal {
    border: none;
    height: 6px;
    background: #232323;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #fafafa;
    border: none;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QScrollBar:vertical, QScrollBar:horizontal {
    background: #232323;
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}
QScrollBar::handle {
    background: #333;
    border-radius: 6px;
}
QScrollBar::handle:hover {
    background: #444;
}

QGroupBox {
    border: none;
    border-radius: 8px;
    margin-top: 10px;
    color: #b0b0b0;
    background: transparent;
}

QTabWidget::pane {
    border: none;
    border-radius: 8px;
    background: #181818;
}
QTabBar::tab {
    background: #232323;
    color: #fafafa;
    border: none;
    border-radius: 8px 8px 0 0;
    padding: 8px 16px;
}
QTabBar::tab:selected {
    background: #181818;
    color: #fafafa;
    border-bottom: 2px solid #fafafa;
}

QToolTip {
    background-color: #232323;
    color: #fafafa;
    border: none;
    border-radius: 6px;
    padding: 6px;
}

/* Status text colors (for QLabel or similar) */
.status-ready, .status-success {
    color: #6fff6f;
    font-weight: bold;
}
.status-error, .status-fail {
    color: #ff6f6f;
    font-weight: bold;
}
.status-warning {
    color: #ffe066;
    font-weight: bold;
} 